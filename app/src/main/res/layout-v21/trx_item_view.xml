<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view_transaksi"
        android:layout_marginBottom="@dimen/xmin_padding"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tr_aset_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_marginLeft="@dimen/xmin_padding"
                    android:text="Daihatsu Jazz | DC 123 WOW | 2015"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tr_aset_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_gravity="right"
                    android:padding="@dimen/xmin_padding"
                    android:text=""
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tr_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_gravity="right"
                    android:background="@drawable/radius_danger"
                    android:padding="@dimen/xmin_padding"
                    android:text="New Order"
                    android:textSize="@dimen/small_text"
                    android:textColor="@color/colorWhite"/>

            </GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/xmin_padding">

                <ImageView
                    android:id="@+id/tr_thumb_aset"
                    android:layout_width="@dimen/thumb_width"
                    android:layout_height="@dimen/thumb_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>

                <RelativeLayout
                    android:id="@+id/tr_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xmin_padding"
                    android:layout_toRightOf="@+id/tr_thumb_aset">

                    <ImageView
                        android:id="@+id/tr_member_thumb"
                        android:layout_width="@dimen/thumb_prop_width"
                        android:layout_height="@dimen/thumb_prop_height"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_person_black_18dp"/>

                    <TextView
                        android:id="@+id/tr_member_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tr_member_thumb"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tr_waktu_sewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xmin_padding"
                    android:layout_toRightOf="@+id/tr_thumb_aset"
                    android:layout_below="@id/tr_member">

                    <ImageView
                        android:id="@+id/tr_waktu_thumb"
                        android:layout_width="@dimen/thumb_prop_width"
                        android:layout_height="@dimen/thumb_prop_height"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_perm_contact_calendar_black_18dp"/>

                    <TextView
                        android:id="@+id/tr_waktu_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tr_waktu_thumb"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tr_lokasi_drop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xmin_padding"
                    android:layout_toRightOf="@+id/tr_thumb_aset"
                    android:layout_below="@id/tr_waktu_sewa">

                    <ImageView
                        android:id="@+id/tr_lokasi_thumb"
                        android:layout_width="@dimen/thumb_prop_width"
                        android:layout_height="@dimen/thumb_prop_height"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_location_on_black_18dp"/>

                    <TextView
                        android:id="@+id/tr_lokasi_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tr_lokasi_thumb"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tr_harga_sewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xmin_padding"
                    android:layout_toRightOf="@+id/tr_thumb_aset"
                    android:layout_below="@id/tr_lokasi_drop">

                    <ImageView
                        android:id="@+id/tr_harga_thumb"
                        android:layout_width="@dimen/thumb_prop_width"
                        android:layout_height="@dimen/thumb_prop_height"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_monetization_on_black_18dp"/>

                    <TextView
                        android:id="@+id/tr_harga_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tr_harga_thumb"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>