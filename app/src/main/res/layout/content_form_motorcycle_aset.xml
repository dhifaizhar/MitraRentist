<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgound"
    android:padding="@dimen/xmin_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.rentist.mitrarentist.FormMotorcycleAsetActivity"
    tools:showIn="@layout/activity_form_motorcycle_aset">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/xmin_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/xmin_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/min_padding">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Detail Aset"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/medium_text"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Merk Kendaraan"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_merk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:elevation="0dp"
                            android:ems="10"
                            android:hint="Brand"
                            android:padding="@dimen/min_padding"
                            android:text="KAWASAKI" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipe"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Tipe"
                            android:padding="@dimen/min_padding"
                            android:text="NINJA 250R" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Plat Nomor"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_plat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Plat Nomor"
                            android:padding="@dimen/min_padding"
                            android:text="B 2946 KK" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tahun Produksi"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Tahun Produksi"
                            android:inputType="textPersonName"
                            android:padding="@dimen/min_padding"
                            android:text="2015" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Warna"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_colour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Warna"
                            android:inputType="textPersonName"
                            android:padding="@dimen/min_padding"
                            android:text="RED" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. BPKB Kendaraan"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_regnum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Nomor BPKB"
                            android:inputType="textPersonName"
                            android:padding="@dimen/min_padding"
                            android:text="005201701SWQ116" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kapasitas Mesin"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_engcap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Kapasitas Mesin"
                            android:inputType="textPersonName"
                            android:padding="@dimen/min_padding"
                            android:text="250 cc" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/xmin_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/min_padding">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Fitur Aset"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/medium_text"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bahan Bakar"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_fuel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Bahan Bakar"
                            android:inputType="textPersonName"
                            android:padding="@dimen/min_padding"
                            android:text="PERTAMAX" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transmisi"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <RadioGroup
                            android:id="@+id/transmission_group"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/xmin_padding"
                            android:checkedButton="@+id/r_manual"
                            android:orientation="horizontal"
                            android:padding="@dimen/xmin_padding">

                            <RadioButton
                                android:id="@+id/r_manual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:buttonTint="@color/colorPrimary"
                                android:checked="true"
                                android:contextClickable="false"
                                android:text="manual" />

                            <RadioButton
                                android:id="@+id/r_automatic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorPrimary"
                                android:text="automatic" />

                        </RadioGroup>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/as_ck_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:layout_weight="1"
                        android:padding="@dimen/xmin_padding"
                        android:text="Pengemudi" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:padding="@dimen/xmin_padding">

                        <CheckBox
                            android:id="@+id/as_ck_assurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/xmin_padding"
                            android:layout_weight="1"
                            android:checked="true"
                            android:paddingEnd="@dimen/min_padding"
                            android:text="Asuransi" />

                        <EditText
                            android:id="@+id/as_assurance_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/as_ck_assurance"
                            android:layout_toRightOf="@+id/as_ck_assurance"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Harga Asuransi"
                            android:inputType="number"
                            android:padding="@dimen/min_padding"
                            android:text="20000" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/as_nprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Normal Season"
                        android:inputType="textPersonName"
                        android:padding="@dimen/min_padding"
                        android:text="0"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/as_hprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="High Season"
                        android:inputType="textPersonName"
                        android:padding="@dimen/min_padding"
                        android:text="0"
                        android:visibility="gone" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/xmin_padding"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <ImageView
                        android:id="@+id/thumb_aset"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/motorbiking" />

                    <Button
                        android:id="@+id/btnUploadFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/xmin_padding"
                        android:layout_weight="1"
                        android:text="Pilih Foto" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>