<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_testimoni_view"
        android:layout_marginBottom="@dimen/xmin_padding"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp"
        android:foreground="?selectableItemBackground">

        <LinearLayout
            android:id="@+id/pr_first_testi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:padding="@dimen/xmin_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tm_aset_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_marginStart="@dimen/xmin_padding"
                    android:padding="@dimen/xmin_padding"
                    android:text="Honda Jazz"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/tm_aset_rating"
                    style="@style/CustomRatingBar"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/xmin_padding"
                    app:srb_isIndicator="true"
                    app:srb_rating="4.0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tm_testimoni"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/xmin_padding">

                <ImageView
                    android:id="@+id/pr_test_ico"
                    android:layout_width="@dimen/thumb_prop_width"
                    android:layout_height="@dimen/thumb_prop_height"
                    android:layout_marginEnd="@dimen/min_padding"
                    android:contentDescription="nama testimoni"
                    app:srcCompat="@drawable/ic_person_black_36dp" />

                <TextView
                    android:id="@+id/tm_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/xmin_padding"
                    android:layout_toRightOf="@+id/pr_test_ico"
                    android:text="Wiliam Negara"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/tm_member_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/xmin_padding"
                    android:layout_toRightOf="@+id/tm_member_name"
                    android:gravity="center_vertical|right"
                    android:text="15/05/2017" />

                <TextView
                    android:id="@+id/tm_member_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tm_member_name"
                    android:layout_toRightOf="@+id/pr_test_ico"
                    android:text="Murah sekaliiiiii" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>