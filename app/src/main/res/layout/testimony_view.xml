<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_testimoni_view"
        android:layout_marginBottom="@dimen/xmin_padding"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp"
        android:foreground="?selectableItemBackground">

        <LinearLayout
            android:id="@+id/pr_first_testi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimarySoft"
                android:padding="@dimen/xmin_padding">

                <TextView
                    android:id="@+id/tm_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xmin_padding"
                    android:text="Honda Jazz"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/xmin_padding"
                    android:layout_marginRight="@dimen/xmin_padding"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tm_member_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/under_small_text"
                    android:layout_marginBottom="@dimen/xmin_padding"
                    android:text="15/05/2017"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/small_space"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kebersihan"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/almost_tiny_text"/>

                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/tm_cleanliness"
                        style="@style/CustomRatingBar"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        app:srb_isIndicator="true"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kerapihan"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/almost_tiny_text"/>

                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/tm_neatness"
                        style="@style/CustomRatingBar"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        app:srb_isIndicator="true"
                        app:srb_rating="4.0"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/small_space"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kebersihan"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/almost_tiny_text"/>

                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/tm_honesty"
                        style="@style/CustomRatingBar"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        app:srb_isIndicator="true"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kerapihan"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/almost_tiny_text"/>

                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/tm_comunication"
                        style="@style/CustomRatingBar"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        app:srb_isIndicator="true"
                        app:srb_rating="4.0"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/min_padding"
                android:layout_marginEnd="@dimen/min_padding"
                android:background="@color/colorBackgound"/>

            <TextView
                android:id="@+id/tm_member_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/min_padding"
                android:layout_marginTop="@dimen/min_padding"
                android:layout_marginBottom="@dimen/min_padding"
                android:textStyle="italic"
                android:text="Murah sekaliiiiii" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>