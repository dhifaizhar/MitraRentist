<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_ontransaksi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/xmin_padding"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:paddingLeft="@dimen/min_padding"
        android:paddingRight="@dimen/min_padding"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tr_aset_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_marginLeft="@dimen/min_padding"
                    android:text="Daihatsu Xenia"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tr_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_marginRight="@dimen/min_padding"
                    android:background="@color/colorPrimarySoft"
                    android:padding="@dimen/xmin_padding"
                    android:text="DC 123 WOW"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/small_text" />

            </GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/cardview_compat_inset_shadow">

                <RelativeLayout
                    android:id="@+id/tr_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/min_padding"
                    android:layout_marginRight="@dimen/min_padding"
                    android:layout_toRightOf="@+id/tr_thumb_aset"
                    android:padding="@dimen/xmin_padding">

                    <ImageView
                        android:id="@+id/tr_member_thumb"
                        android:layout_width="@dimen/thumb_prop_width"
                        android:layout_height="@dimen/thumb_prop_height"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_person_black_18dp" />

                    <TextView
                        android:id="@+id/tr_member_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tr_member_thumb" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tr_waktu_sewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tr_member"
                    android:layout_marginLeft="@dimen/min_padding"
                    android:layout_marginRight="@dimen/min_padding"
                    android:layout_toRightOf="@+id/tr_thumb_aset"
                    android:padding="@dimen/xmin_padding">

                    <ImageView
                        android:id="@+id/tr_waktu_thumb"
                        android:layout_width="@dimen/thumb_prop_width"
                        android:layout_height="@dimen/thumb_prop_height"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        app:srcCompat="@drawable/ic_perm_contact_calendar_black_18dp" />

                    <TextView
                        android:id="@+id/tr_waktu_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tr_waktu_thumb" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/cardview_compat_inset_shadow"
                android:paddingLeft="@dimen/min_padding"
                android:paddingRight="@dimen/min_padding">

                <TextView
                    android:id="@+id/tr_harga_det"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/min_padding"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/medium_text" />

                <RatingBar
                    android:id="@+id/aset_rating2"
                    style="@style/SmallRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/min_padding"
                    android:paddingTop="@dimen/min_padding" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>