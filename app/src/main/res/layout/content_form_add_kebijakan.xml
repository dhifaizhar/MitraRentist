<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGrey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.rentist.mitrarentist.FormAddKebijakanActivity"
    tools:showIn="@layout/activity_form_add_kebijakan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/min_padding"
        android:layout_margin="@dimen/xmin_padding"
        android:background="@drawable/radius_white"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/kbj_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorGrey"
            android:ems="10"
            android:gravity="start"
            android:hint="Perihal"
            android:inputType="text"
            android:padding="@dimen/min_padding"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/kbj_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorGrey"
            android:ems="10"
            android:gravity="start"
            android:hint="Deskripsi"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5"
            android:padding="@dimen/min_padding"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/colorPrimary"
            android:textCursorDrawable="@null" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_lmedium_height"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/medium_text"
        android:text="Simpan"
        android:layout_margin="0dp"
        android:padding="0dp" />

</RelativeLayout>