<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGrey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.rentist.mitrarentist.FormKebijakanActivity"
    tools:showIn="@layout/activity_form_add_kebijakan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/xmin_padding"
        android:layout_margin="@dimen/xmin_padding"
        android:background="@drawable/radius_white"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/xmin_padding"
            android:orientation="vertical"
            android:padding="@dimen/xmin_padding">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori Asset"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/kbj_asset_cat_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/xmin_padding"
                android:background="@color/colorNearWhite">

                <Spinner
                    android:id="@+id/kbj_asset_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/asset_category_entries"
                    android:fadingEdge="horizontal"
                    android:padding="@dimen/xmin_padding"
                    android:spinnerMode="dialog"
                    app:layout_gravity="bottom" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/xmin_padding"
            android:orientation="vertical"
            android:padding="@dimen/xmin_padding">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/kbj_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNearWhite"
                android:ems="10"
                android:hint="Judul"
                android:imeOptions="actionNext"
                android:inputType="text|textCapWords"
                android:padding="@dimen/min_padding"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/xmin_padding"
            android:orientation="vertical"
            android:padding="@dimen/xmin_padding">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/kbj_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNearWhite"
                android:ems="10"
                android:gravity="start"
                android:hint="Deskripsi"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:padding="@dimen/min_padding"
                />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_lmedium_height"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/medium_text"
        android:text="Simpan"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>