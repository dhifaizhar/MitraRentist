<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view_aset"
        android:layout_marginBottom="@dimen/xmin_padding"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/as_aset_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_marginStart="@dimen/xmin_padding"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/as_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_marginStart="@dimen/xmin_padding"
                    android:layout_toLeftOf="@+id/aset_rating"
                    android:textSize="@dimen/small_text" />

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/aset_rating"
                    style="@style/CustomRatingBar"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/xmin_padding"
                    app:srb_rating="4.5" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/xmin_padding">

                <ImageView
                    android:id="@+id/as_thumb_aset"
                    android:layout_width="@dimen/thumb_width"
                    android:layout_height="@dimen/thumb_height"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="@dimen/xmin_padding"
                    android:layout_marginStart="@dimen/xmin_padding"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:foregroundGravity="center_horizontal|center_vertical"
                    android:contentDescription="itemAset"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/as_thumb_aset">

                    <RelativeLayout
                        android:id="@+id/as_harga_sewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/xmin_padding"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/as_harga_thumb"
                            android:layout_width="@dimen/thumb_prop_width"
                            android:layout_height="@dimen/thumb_prop_height"
                            android:layout_marginEnd="@dimen/min_padding"
                            app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                            android:contentDescription="price"/>

                        <TextView
                            android:id="@+id/as_harga_det"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/as_harga_thumb"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Fitur : "/>

                        <GridLayout
                            android:id="@+id/as_grid_fitur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/xmin_padding"
                            android:columnCount="2">

                            <RelativeLayout
                                android:id="@+id/as_fitur_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/as_fitur_1_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                                    android:contentDescription="price"/>

                                <TextView
                                    android:id="@+id/as_fitur_1_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/as_fitur_1_ico"
                                    android:text="8 kursi"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/as_fitur_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/as_fitur_2_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                                    android:contentDescription="price"/>

                                <TextView
                                    android:id="@+id/as_fitur_2_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/as_fitur_2_ico"
                                    android:text="8 kursi"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/as_fitur_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/as_fitur_3_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                                    android:contentDescription="price"/>

                                <TextView
                                    android:id="@+id/as_fitur_3_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/as_fitur_3_ico"
                                    android:text="8 kursi"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/as_fitur_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/as_fitur_4_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                                    android:contentDescription="price"/>

                                <TextView
                                    android:id="@+id/as_fitur_4_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/as_fitur_4_ico"
                                    android:text="8 kursi"/>
                            </RelativeLayout>

                        </GridLayout>
                    </LinearLayout>



                </LinearLayout>



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/xmin_padding"
                android:layout_margin="@dimen/xmin_padding"
                android:gravity="center"
                android:background="@drawable/radius_primary">

                <TextView
                    android:id="@+id/as_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="[ Aktif ]"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/medium_text"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>