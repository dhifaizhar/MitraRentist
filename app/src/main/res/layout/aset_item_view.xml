<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_aset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/xmin_padding"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:orientation="horizontal"-->
                <!--android:padding="@dimen/xmin_padding"-->
                <!--android:layout_margin="@dimen/xmin_padding"-->
                <!--android:gravity="center"-->
                <!--android:background="@drawable/radius_primary">-->
                <TextView
                    android:id="@+id/as_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xmin_padding"
                    android:text="Status : "
                    android:textColor="@color/colorBlack87"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/as_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_toEndOf="@+id/as_status_text"
                    android:text="[ Aktif ]"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

                <!--</LinearLayout>-->

                <TextView
                    android:id="@+id/as_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/xmin_padding"
                    android:layout_marginStart="@dimen/xmin_padding"
                    android:layout_marginTop="@dimen/min_padding"
                    android:layout_toLeftOf="@+id/tm_aset_rating"
                    android:textSize="@dimen/small_text" />

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/tm_aset_rating"
                    style="@style/CustomRatingBar"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/xmin_padding"
                    app:srb_rating="4.5" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/xmin_padding">

                <ImageView
                    android:id="@+id/as_thumb_aset"
                    android:layout_width="@dimen/thumb_width"
                    android:layout_height="@dimen/thumb_height"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="@dimen/xmin_padding"
                    android:layout_marginStart="@dimen/xmin_padding"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:contentDescription="itemAset"
                    android:foregroundGravity="center_horizontal|center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/as_thumb_aset"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/as_harga_sewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/xmin_padding"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/as_harga_thumb"
                            android:layout_width="@dimen/thumb_prop_width"
                            android:layout_height="@dimen/thumb_prop_height"
                            android:layout_marginEnd="@dimen/min_padding"
                            android:contentDescription="price"
                            app:srcCompat="@drawable/ic_monetization_on_black_18dp" />

                        <TextView
                            android:id="@+id/as_harga_det"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/as_harga_thumb"
                            android:textColor="@color/colorPrice"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Fitur : " />

                        <GridLayout
                            android:id="@+id/as_grid_fitur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:padding="@dimen/xmin_padding">

                            <RelativeLayout
                                android:id="@+id/as_seat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/as_seat_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    android:contentDescription="Kursi"
                                    app:srcCompat="@drawable/ic_airline_seat_recline_normal_black_18dp" />

                                <TextView
                                    android:id="@+id/as_seat_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/as_seat_ico"
                                    android:text="0" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/as_trans"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/as_trans_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    android:contentDescription="transmission"
                                    app:srcCompat="@drawable/ic_settings_black_18dp" />

                                <TextView
                                    android:id="@+id/as_trans_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/as_trans_ico"
                                    android:text="Manual" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/as_ac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding"
                                android:layout_marginTop="@dimen/xmin_padding">

                                <ImageView
                                    android:id="@+id/as_ac_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    android:contentDescription="AC"
                                    app:srcCompat="@drawable/ic_ac_unit_black_36dp" />

                                <TextView
                                    android:id="@+id/as_ac_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/as_ac_ico"
                                    android:text="" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/as_driver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding"
                                android:layout_marginTop="@dimen/xmin_padding">

                                <ImageView
                                    android:id="@+id/as_driver_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    android:contentDescription="price"
                                    app:srcCompat="@drawable/ic_person_black_18dp" />

                                <TextView
                                    android:id="@+id/as_driver_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/as_driver_ico"
                                    android:text="" />
                            </RelativeLayout>

                        </GridLayout>
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryTrans"
                android:padding="@dimen/min_padding">

                <TextView
                    android:id="@+id/as_aset_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Aset Type"
                    android:textColor="@color/colorWhite"

                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>