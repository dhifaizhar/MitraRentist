<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view_driver"
        android:layout_marginBottom="@dimen/xmin_padding"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/xmin_padding">

                <ImageView
                    android:id="@+id/dr_thumb"
                    android:layout_width="@dimen/breadcrumb_height"
                    android:layout_height="@dimen/breadcrumb_height"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="@dimen/xmin_padding"
                    android:layout_marginStart="@dimen/xmin_padding"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:contentDescription="item Driver"
                    android:foregroundGravity="center_horizontal|center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/dr_thumb">

                    <RelativeLayout
                        android:id="@+id/dr_nama_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/xmin_padding"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/dr_nama_ico"
                            android:layout_width="@dimen/thumb_prop_width"
                            android:layout_height="@dimen/thumb_prop_height"
                            android:layout_marginEnd="@dimen/min_padding"
                            app:srcCompat="@drawable/ic_person_outline_black_18dp"
                            android:contentDescription="price"/>

                        <TextView
                            android:id="@+id/dr_nama_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/dr_nama_ico"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dr_telp_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/xmin_padding"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/dr_telp_ico"
                            android:layout_width="@dimen/thumb_prop_width"
                            android:layout_height="@dimen/thumb_prop_height"
                            android:layout_marginEnd="@dimen/min_padding"
                            app:srcCompat="@drawable/ic_phone_black_18dp"
                            android:contentDescription="phone"/>

                        <TextView
                            android:id="@+id/dr_telp_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/dr_telp_ico"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>