<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view_user"
        app:cardElevation="1dp"
        android:padding="@dimen/xmin_padding"
        android:foreground="?selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/min_padding"
                android:layout_marginTop="@dimen/xmin_padding"
                >

                <ImageView
                    android:id="@+id/user_thumb"
                    android:layout_width="@dimen/msg_thumb_width"
                    android:layout_height="@dimen/msg_thumb_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/user_thumb"
                    android:id="@+id/user_info">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama User"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/medium_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Role User"
                        android:textColor="@color/colorWhite"
                        android:paddingStart="@dimen/xmin_padding"
                        android:paddingEnd="@dimen/xmin_padding"
                        android:background="@android:color/holo_green_light"
                        android:textSize="@dimen/small_text"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/telp_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xmin_padding"
                    android:layout_below="@id/user_info"
                    android:layout_toRightOf="@id/user_thumb"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/dr_sim_ico"
                        android:layout_width="@dimen/thumb_prop_width"
                        android:layout_height="@dimen/thumb_prop_height"
                        android:layout_marginEnd="@dimen/min_padding"
                        app:srcCompat="@drawable/ic_phone_black_18dp"
                        android:contentDescription="phone"/>

                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telepon User"
                        android:textColor="@color/colorBlack"
                        android:layout_toEndOf="@id/dr_sim_ico"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/dr_sim_ico"
                        android:textSize="@dimen/small_text" />


                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/min_padding"
                android:layout_marginRight="@dimen/min_padding"
                android:background="@android:color/darker_gray"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>