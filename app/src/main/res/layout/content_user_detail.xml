<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.rentist.mitrarentist.UserDetailActivity"
    tools:showIn="@layout/activity_detail_user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/btn_lmedium_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="@dimen/min_padding">

                <ImageView
                    android:id="@+id/us_thumb"
                    android:layout_width="@dimen/thumb_width"
                    android:layout_height="@dimen/thumb_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:background="@drawable/img"
                    android:cropToPadding="false" />

                <TextView
                    android:id="@+id/us_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xmin_padding"
                    android:layout_weight="1"
                    android:padding="@dimen/xmin_padding"
                    android:text="Nama"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/large_text"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/progressBar"
                style="@style/SpinKitView.FadingCircle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_lmedium_height"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/min_padding"
                android:background="@android:color/transparent"
                android:padding="@dimen/min_padding"
                app:SpinKit_Color="@color/colorPrimary" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/med_padding"
                android:layout_marginRight="@dimen/med_padding"
                android:layout_marginBottom="@dimen/med_padding"
                app:cardElevation="0dp"
                android:padding="@dimen/xmin_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/us_aRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimarySoft"
                        android:padding="@dimen/min_padding"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/us_role_ico"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/min_padding"
                            android:contentDescription="user role"
                            app:srcCompat="@drawable/ic_person_grey_24dp" />

                        <TextView
                            android:id="@+id/us_role_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/xmin_padding"
                            android:layout_marginLeft="@dimen/xmin_padding"
                            android:layout_toEndOf="@+id/us_role_ico"
                            android:text="-"
                            android:textSize="@dimen/medium_text"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/us_role_name"
                            android:layout_marginLeft="@dimen/xmin_padding"
                            android:layout_toEndOf="@+id/us_role_ico"
                            android:textColor="@color/colorBlack"
                            android:text="Jenis Pengguna"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/us_no_telp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/min_padding"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/pr_telp_ico"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/min_padding"
                            android:contentDescription="phone"
                            app:srcCompat="@drawable/ic_phone_android_grey_24dp" />

                        <TextView
                            android:id="@+id/us_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/xmin_padding"
                            android:layout_marginLeft="@dimen/xmin_padding"
                            android:layout_toEndOf="@+id/pr_telp_ico"
                            android:text="-"
                            android:textSize="@dimen/medium_text"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/us_phone_number"
                            android:layout_marginLeft="@dimen/xmin_padding"
                            android:layout_toEndOf="@+id/pr_telp_ico"
                            android:text="Telepon"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/us_mail_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimarySoft"
                        android:padding="@dimen/min_padding"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/us_email_ico"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/min_padding"
                            android:contentDescription="email"
                            app:srcCompat="@drawable/ic_email_grey_24dp" />

                        <TextView
                            android:id="@+id/us_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/xmin_padding"
                            android:layout_marginLeft="@dimen/xmin_padding"
                            android:layout_toEndOf="@+id/us_email_ico"
                            android:text="-"
                            android:textSize="@dimen/medium_text"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/us_email"
                            android:layout_marginLeft="@dimen/xmin_padding"
                            android:layout_toEndOf="@+id/us_email_ico"
                            android:text="Email"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
