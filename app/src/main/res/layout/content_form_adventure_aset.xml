<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgound"
    android:padding="@dimen/xmin_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.rentist.mitrarentist.FormAdventureAsetActivity"
    tools:showIn="@layout/activity_form_adventure_aset">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/xmin_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/xmin_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/min_padding">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Detail Aset"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/medium_text"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sub Kategori Aset"
                            android:textColor="@color/colorBlack" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorNearWhite"
                            android:orientation="vertical"
                            android:padding="@dimen/xmin_padding">

                            <Spinner
                                android:id="@+id/as_subcat_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/adventure_subcategory_entries"
                                android:padding="@dimen/xmin_padding"
                                android:spinnerMode="dialog" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Aset"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:elevation="0dp"
                            android:ems="10"
                            android:hint="Nama"
                            android:imeOptions="actionNext"
                            android:inputType="text|textCapWords"
                            android:padding="@dimen/min_padding"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Merk"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_merk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:elevation="0dp"
                            android:ems="10"
                            android:hint="Brand"
                            android:imeOptions="actionNext"
                            android:inputType="text|textCapWords"
                            android:padding="@dimen/min_padding"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipe"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:hint="Tipe"
                            android:imeOptions="actionNext"
                            android:inputType="text|textCapWords"
                            android:padding="@dimen/min_padding"
                            android:text="" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/xmin_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/min_padding">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Fitur Aset"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/medium_text"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minimal Lama Peminjaman"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/as_min_day_rent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorNearWhite"
                                android:ems="10"
                                android:hint="0"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:padding="@dimen/min_padding"
                                android:text="" />

                            <TextView
                                android:id="@+id/day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/min_padding"
                                android:text="Hari"
                                android:textColor="@color/colorBlack54"
                                android:textSize="@dimen/medium_text" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Metode Pengiriman"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/as_ck_delivery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/xmin_padding"
                                android:layout_weight="1"
                                android:checked="false"
                                android:paddingEnd="@dimen/min_padding"
                                android:text="Dikirim" />

                            <CheckBox
                                android:id="@+id/as_ck_pickup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/xmin_padding"
                                android:layout_weight="1"
                                android:checked="false"
                                android:paddingEnd="@dimen/min_padding"
                                android:text="Dijemput" />

                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:padding="@dimen/xmin_padding">

                        <CheckBox
                            android:id="@+id/as_ck_assurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/xmin_padding"
                            android:layout_weight="1"
                            android:checked="false"
                            android:paddingEnd="@dimen/min_padding"
                            android:text="Asuransi" />


                        <!--<EditText-->
                        <!--android:id="@+id/as_assurance_price"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:background="@color/colorNearWhite"-->
                        <!--android:layout_toEndOf="@id/as_ck_assurance"-->
                        <!--android:ems="10"-->
                        <!--android:hint="Nominal"-->
                        <!--android:padding="@dimen/min_padding"-->
                        <!--android:imeOptions="actionNext"-->
                        <!--android:inputType="number"-->
                        <!--android:text="0" />-->

                        <!--<TextView-->
                        <!--android:id="@+id/idr"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="IDR"-->
                        <!--android:layout_alignParentEnd="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:textColor="@color/colorBlack54"-->
                        <!--android:layout_marginEnd="@dimen/min_padding"-->
                        <!--android:textSize="@dimen/medium_text" />-->

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/as_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorNearWhite"
                            android:ems="10"
                            android:gravity="start"
                            android:hint="Keterangan"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lines="3"
                            android:padding="@dimen/min_padding"
                            android:text="Sekilas Tentang Aset" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/xmin_padding">

                <LinearLayout
                    android:id="@+id/as_pricing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/xmin_padding"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/min_padding">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Harga Sewa"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/medium_text"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga Sewa "
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.aldoapps.autoformatedittext.AutoFormatEditText
                                android:id="@+id/as_price_basic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorNearWhite"
                                android:ems="10"
                                android:hint="0"
                                android:maxLength="12"
                                android:padding="@dimen/min_padding"
                                app:isDecimal="false" />

                            <TextView
                                android:id="@+id/idra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/min_padding"
                                android:text="IDR"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/medium_text" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/disptext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_space"
                                android:text="Harga yang ditampilkan (+20%):"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/almost_tiny_text" />

                            <TextView
                                android:id="@+id/as_price_basic_disp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/small_space"
                                android:layout_toEndOf="@+id/disptext"
                                android:text="0 IDR"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorPrice"
                                android:textSize="@dimen/under_small_text" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/con_advance_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/xmin_padding"
                            android:orientation="vertical"
                            android:padding="@dimen/xmin_padding">

                            <TextView
                                android:id="@+id/textView12w"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama Periode"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/as_range_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorNearWhite"
                                android:ems="10"
                                android:hint="Nama Periode"
                                android:inputType="textPersonName|textCapWords"
                                android:padding="@dimen/min_padding"
                                android:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/xmin_padding"
                            android:orientation="vertical"
                            android:padding="@dimen/xmin_padding">

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Waktu Mulai"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/as_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorNearWhite"
                                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                                android:editable="false"
                                android:ems="10"
                                android:hint="Tanggal Mulai"
                                android:clickable="true"
                                android:inputType="date|none"
                                android:padding="@dimen/min_padding"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/xmin_padding"
                            android:orientation="vertical"
                            android:padding="@dimen/xmin_padding">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Waktu Berakhir"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/as_end_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorNearWhite"
                                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                                android:editable="false"
                                android:ems="10"
                                android:clickable="true"
                                android:hint="Tanggal Akhir"
                                android:inputType="date|none"
                                android:padding="@dimen/min_padding"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/xmin_padding"
                            android:orientation="vertical"
                            android:padding="@dimen/xmin_padding">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Harga "
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <com.aldoapps.autoformatedittext.AutoFormatEditText
                                    android:id="@+id/as_price_advance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorNearWhite"
                                    android:ems="10"
                                    android:hint="0"
                                    android:maxLength="12"
                                    android:padding="@dimen/min_padding"
                                    app:isDecimal="false" />

                                <TextView
                                    android:id="@+id/daye"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/min_padding"
                                    android:text="IDR"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="@dimen/medium_text" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/disptext2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small_space"
                                    android:text="Harga yang ditampilkan (+20%):"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="@dimen/almost_tiny_text" />

                                <TextView
                                    android:id="@+id/as_price_advance_disp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="@dimen/small_space"
                                    android:layout_toEndOf="@+id/disptext2"
                                    android:text="0 IDR"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/colorPrice"
                                    android:textSize="@dimen/under_small_text" />
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_price_advance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:clickable="true"
                        android:text="+ Tambah Harga Advance"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_text" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/tab_pricing"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--&gt;-->
            <!--</android.support.design.widget.TabLayout>-->

            <!--&lt;!&ndash;gunanya untuk swipe fragment&ndash;&gt;-->
            <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/vp_price_tabs"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--&gt;-->

            <!--</android.support.v4.view.ViewPager>-->


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/xmin_padding"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <ImageView
                        android:id="@+id/thumb_aset"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/no_image" />

                    <Button
                        android:id="@+id/btnUploadFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/xmin_padding"
                        android:layout_weight="1"
                        android:text="Pilih Foto" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
