<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/min_padding"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_msgList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/xmin_padding"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/min_padding">

            <ImageView
                android:id="@+id/msg_thumb"
                android:layout_width="@dimen/msg_thumb_width"
                android:layout_height="@dimen/msg_thumb_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/img" />

            <TextView
                android:id="@+id/msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/min_padding"
                android:layout_toRightOf="@id/msg_thumb"
                android:text="-"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/msg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/msg_title"
                android:layout_toRightOf="@id/msg_thumb"
                android:text="-"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/small_text" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>