<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/min_padding"
    android:background="?attr/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.rentist.mitrarentist.CompleteRegistrationActivity"
    tools:showIn="@layout/activity_complete_registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/xmin_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/xmin_padding"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/min_padding">

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/min_padding"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:padding="@dimen/xmin_padding"
                    android:text="Lengkapi Informasi Akun Anda"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/min_padding"
                    android:padding="@dimen/min_padding"
                    android:text="Lengkapi infromasi rekening yang Anda gunakan untuk dapat melakukan transaksi dalam aplikasi. "
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/xmin_padding"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Yang Digunakan"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/reg_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorNearWhite"
                        android:ems="10"
                        android:hint="Nama Bank"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/min_padding"
                        android:text="MANDIRI PLUS" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/xmin_padding"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Pemilik Rekening"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/reg_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorNearWhite"
                        android:ems="10"
                        android:hint="Nama Bank"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/min_padding"
                        android:text="SI Kumbang Goyang" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/xmin_padding"
                    android:orientation="vertical"
                    android:padding="@dimen/xmin_padding">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor Rekening Bank"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/reg_bank_rek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorNearWhite"
                        android:ems="10"
                        android:hint="Rekening Bank"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/min_padding"
                        android:text="198168881" />
                </LinearLayout>

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/xmin_padding"
                android:padding="@dimen/xmin_padding"
                android:text="Saya mengerti dengan Ketentuan dan Kebijakan yang berlaku."
                android:textColor="@color/colorWhite"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:text="Simpan"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
