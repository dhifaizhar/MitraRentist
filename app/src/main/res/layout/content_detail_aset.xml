<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/xmin_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fontFamily="sans-serif"
            android:text="@string/status_label"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

            <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/radius_primary"
            android:gravity="center"
            android:text="@string/status_aktif"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_transaksi"
            android:layout_marginBottom="@dimen/xmin_padding"
            android:background="@drawable/radius_white"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="1dp"
            android:foreground="?selectableItemBackground"
            android:clickable="false"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/xmin_padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/det_as_thumb_aset_l">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/det_as_rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/xmin_padding"
                            android:layout_marginStart="@dimen/xmin_padding"
                            android:layout_alignParentStart="true"
                            android:textSize="@dimen/small_text" />

                        <RatingBar
                            android:id="@+id/det_aset_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/xmin_padding"
                            android:layout_marginLeft="0dp"
                            android:layout_toRightOf="@+id/det_as_rating_text"
                            style="@style/SmallRatingBar"
                            />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/det_as_thumb_aset"
                        android:layout_width="@dimen/thumb_width"
                        android:layout_height="@dimen/thumb_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/xmin_padding"
                        android:layout_marginStart="@dimen/xmin_padding"
                        android:layout_marginTop="@dimen/xmin_padding"
                        android:layout_below="@+id/det_aset_rating"
                        android:foregroundGravity="center_horizontal|center_vertical"
                        android:contentDescription="itemAset"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/det_as_thumb_aset_l">

                    <RelativeLayout
                        android:id="@+id/det_as_harga_sewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/xmin_padding"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/det_as_harga_thumb"
                            android:layout_width="@dimen/thumb_prop_width"
                            android:layout_height="@dimen/thumb_prop_height"
                            android:layout_marginEnd="@dimen/min_padding"
                            app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                            android:contentDescription="price"/>

                        <TextView
                            android:id="@+id/det_as_harga_det"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/det_as_harga_thumb"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/xmin_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Fitur : "/>

                        <GridLayout
                            android:id="@+id/det_as_grid_fitur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/xmin_padding"
                            android:columnCount="2">

                            <RelativeLayout
                                android:id="@+id/det_as_fitur_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/det_as_fitur_1_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                                    android:contentDescription="price"/>

                                <TextView
                                    android:id="@+id/det_as_fitur_1_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/det_as_fitur_1_ico"
                                    android:text="8 kursi"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/det_as_fitur_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/det_as_fitur_2_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                                    android:contentDescription="price"/>

                                <TextView
                                    android:id="@+id/det_as_fitur_2_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/det_as_fitur_2_ico"
                                    android:text="8 kursi"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/det_as_fitur_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/det_as_fitur_3_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                                    android:contentDescription="price"/>

                                <TextView
                                    android:id="@+id/det_as_fitur_3_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/det_as_fitur_3_ico"
                                    android:text="8 kursi"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/det_as_fitur_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/min_padding">

                                <ImageView
                                    android:id="@+id/det_as_fitur_4_ico"
                                    android:layout_width="@dimen/thumb_prop_width"
                                    android:layout_height="@dimen/thumb_prop_height"
                                    android:layout_marginEnd="@dimen/xmin_padding"
                                    app:srcCompat="@drawable/ic_monetization_on_black_18dp"
                                    android:contentDescription="price"/>

                                <TextView
                                    android:id="@+id/det_as_fitur_4_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/det_as_fitur_4_ico"
                                    android:text="8 kursi"/>
                            </RelativeLayout>

                        </GridLayout>
                    </LinearLayout>



                </LinearLayout>



            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

        <CalendarView
            android:id="@+id/calendar_aset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_white" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>