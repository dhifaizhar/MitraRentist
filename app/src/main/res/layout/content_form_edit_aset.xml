<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/min_padding"
            android:background="@drawable/radius_white">


            <ImageView
                android:id="@+id/as_thumb"
                android:layout_width="@dimen/thumb_width"
                android:layout_height="@dimen/thumb_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mobil_1" />

            <Button
                android:id="@+id/btnUploadGambar"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xmin_padding"
                android:layout_weight="1"
                android:text="Pilih Gambar" />

            <EditText
                android:id="@+id/as_aset_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="20dp"
                android:hint="Nama Aset"
                android:inputType="textPersonName"
                android:padding="@dimen/min_padding"
                android:textColorLink="@android:color/black"
                android:textColorHighlight="@android:color/black"
                />

        <!--<EditText-->
            <!--android:id="@+id/as_plat_no"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ems="10"-->
            <!--android:hint="Plat No"-->
            <!--android:inputType="text"-->
            <!--android:padding="@dimen/min_padding" />-->

                <EditText
                    android:id="@+id/as_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Harga"
                    android:inputType="number"
                    android:layout_marginTop="@dimen/min_padding"
                    android:padding="@dimen/min_padding"
                    android:textColorHighlight="@android:color/black"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/min_padding"
                    android:text="Fitur"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/large_text" />


                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <EditText
                    android:id="@+id/as_trans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginTop="@dimen/min_padding"
                    android:hint="Transmisi"
                    android:inputType="text"
                    android:padding="@dimen/min_padding"
                    android:textColorHighlight="@android:color/black"
                    />


                <EditText
                    android:id="@+id/as_pintu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Banyak Pintu"
                    android:layout_marginTop="@dimen/min_padding"
                    android:inputType="number"
                    android:padding="@dimen/min_padding"
                    android:textColorHighlight="@android:color/black"
                    />

                <EditText
                    android:id="@+id/as_kursi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginTop="@dimen/min_padding"
                    android:hint="Banyak Kursi"
                    android:inputType="number"
                    android:padding="@dimen/min_padding"
                    android:textColorHighlight="@android:color/black"
                    />


        </LinearLayout>
    </ScrollView>

</LinearLayout>