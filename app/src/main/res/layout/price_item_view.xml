<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/as_con_price_advance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_space"
    android:background="@color/colorPrimarySoft"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:padding="@dimen/xmin_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/as_advance_rangename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/almost_tiny_text"
                tools:text="Range Name :" />

            <TextView
                android:id="@+id/as_advance_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/med_padding"
                android:textColor="@color/colorPrice"
                android:textSize="@dimen/small_text"
                android:textStyle="bold"
                tools:text="150000 IDR" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/almost_tiny_text"
                android:text="Periode " />


            <TextView
                android:id="@+id/as_advance_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xmin_padding"
                android:textSize="@dimen/almost_tiny_text"
                android:layout_marginStart="@dimen/med_padding"
                tools:text="2017-11-09 sd 2017-12-09" />

        </LinearLayout>

</LinearLayout>