<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/xmin_padding"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/med_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/msg_thumb_width"
        android:layout_height="@dimen/msg_thumb_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/xmin_padding"
        android:layout_marginTop="@dimen/min_padding"
        app:srcCompat="@drawable/user_ava_man" />

    <TextView
        android:id="@+id/rentNameDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xmin_padding"
        android:paddingBottom="@dimen/xmin_padding"
        android:paddingTop="@dimen/xmin_padding"
        android:text="RENTAL SUKSES"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/mitra_rating"
        style="@style/SmallRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
