<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_voucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/xmin_padding"
        android:layout_marginRight="@dimen/xmin_padding"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp"
        android:layout_marginTop="@dimen/xmin_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/min_padding">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vou_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold"
                    android:text="Nama Voucher"/>

                <TextView
                    android:id="@+id/vou_status"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_primary"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/medium_text"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:padding="@dimen/xmin_padding"
                    android:text="Aktif" />



            </GridLayout>

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:id="@+id/line"
                android:background="@android:color/darker_gray"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/min_padding">

                <TextView
                    android:id="@+id/vou_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/medium_text"
                    android:text="Rp 10000"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <TextView
                        android:id="@+id/vou_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/medium_text"
                        android:layout_marginTop="@dimen/xmin_padding"
                        android:text="Kuota: "/>

                    <TextView
                        android:id="@+id/vou_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/medium_text"
                        android:layout_marginTop="@dimen/xmin_padding"
                        android:text="100"/>

                </GridLayout>

            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vou_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/medium_text"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:text="07 Juli 2017"/>

                <TextView
                    android:id="@+id/vou_sampai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/medium_text"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:text=" sampai "/>

                <TextView
                    android:id="@+id/vou_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/medium_text"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:text="21 Juli 2017"/>

            </GridLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>