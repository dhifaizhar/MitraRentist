<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_voucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/xmin_padding"
        android:layout_marginRight="@dimen/xmin_padding"
        android:layout_marginTop="@dimen/xmin_padding"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/min_padding">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <TextView
                    android:id="@+id/vou_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Nama Voucher"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vou_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:background="@drawable/radius_primary"
                    android:paddingBottom="@dimen/xmin_padding"
                    android:paddingLeft="@dimen/med_padding"
                    android:paddingRight="@dimen/med_padding"
                    android:paddingTop="@dimen/xmin_padding"
                    android:text="Code"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />


            </GridLayout>

            <View
                android:id="@+id/line"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:layout_marginTop="@dimen/min_padding">

                <TextView
                    android:id="@+id/vou_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="10000 IDR"
                    android:textColor="@color/colorPrice"
                    android:textSize="@dimen/medium_text" />


                <TextView
                    android:id="@+id/vou_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/medium_text"
                    android:layout_column="1"
                    android:layout_gravity="end"/>

                <!--<TextView-->
                        <!--android:id="@+id/vou_amount_text"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/xmin_padding"-->
                        <!--android:text="Kuota: "-->
                        <!--android:textColor="@color/colorBlack"-->
                        <!--android:textSize="@dimen/medium_text" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/vou_amount"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/xmin_padding"-->
                        <!--android:text="100"-->
                        <!--android:textColor="@color/colorBlack"-->
                        <!--android:textSize="@dimen/medium_text" />-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_column="0"
                    >

                    <TextView
                        android:id="@+id/vou_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xmin_padding"
                        android:text="07 Juli 2017"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/small_text"
                        />

                    <TextView
                        android:id="@+id/vou_sampai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xmin_padding"
                        android:text=" s/d "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/small_text"
                        />

                    <TextView
                        android:id="@+id/vou_endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xmin_padding"
                        android:text="21 Juli 2017"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/small_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/vou_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:text="desc"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/vou_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/xmin_padding"
                    android:text="Ubah"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/min_padding"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/medium_text"
                    android:clickable="true"/>

            </GridLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xmin_padding"
                >







            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>